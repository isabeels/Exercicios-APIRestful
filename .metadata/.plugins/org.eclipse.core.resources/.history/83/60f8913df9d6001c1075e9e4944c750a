package org.serratec.java2backend.projeto02.service;

import java.util.Arrays;
import java.util.List;

import org.serratec.java2backend.projeto02.dominio.Todo;
import org.springframework.stereotype.Service;

@Service
public class TodoService {

	private List<Todo> todos = Arrays.asList(new Todo(1, "Mercado", "Ir ao mercado fazer compras"),
			new Todo(2, "Remedio", "Ir na farmacia"),
			new Todo(3, "Estudar", "Abrir o classroom e entrar na aula"));
	
	private List<Todo> listaTodo(){
		return this.todos;
	}
}
