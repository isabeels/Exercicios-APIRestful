package org.serratec.java2backend.projeto02.controllers;

import java.util.Arrays;
import java.util.List;

import org.serratec.java2backend.projeto02.dominio.Todo;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

@RestController
public class TodoController {

	@RequestMapping("/todo")
	public List<Todo> getTodos(){
		return Arrays.asList(
				new Todo(1, "Mercado", "Ir ao mercado fazer compras"),
				new Todo(2, "Remedio", "Ir na farmacia"),
				new Todo(3, "Estudar", "Abrir o classroom e entrar na aula")
				);
				
	}
}
